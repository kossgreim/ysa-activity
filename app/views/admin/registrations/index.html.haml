- model_class = Registration
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    = form_tag admin_registrations_path, method: "get" do
      %tr.filters
        %th
          %input.form-control.search-field-text{name: 'name', placeholder: "Name", :type => "text"}
        %th
          %input.form-control.search-field-text{name: 'last_name', placeholder: "Last Name", :type => "text"}
        %th
          %input.form-control.search-field-text{name: 'city', placeholder: "City", :type => "text"}
        %th
          %input.form-control.search-field-text{name: 'registred_at', placeholder: "Registred at", :type => "text"}
  %tbody
    - @registrations.each do |registration|
      %tr
        %td= link_to registration.full_name, admin_registration_path(registration)
        %td= registration.email
        %td= registration.city
        %td= registration.created_at.strftime("%B %d, %Y at %H:%M")
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_registration_path(registration), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_registration_path(registration), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_registration_path, :class => 'btn btn-primary'
%BR
= will_paginate @registrations, renderer: BootstrapPagination::Rails
