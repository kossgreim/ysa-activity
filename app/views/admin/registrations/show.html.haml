- model_class = Registration
.panel.panel-default
  .panel-heading
    %h3.panel-title=t '.title', :default => model_class.model_name.human.titleize
  .panel-body
    %table.table
      %tr
        %th= model_class.human_attribute_name(:name) + ':'
        %td= @registration.name
      %tr
        %th= model_class.human_attribute_name(:last_name) + ':'
        %td
          = @registration.last_name
      %tr
        %th= model_class.human_attribute_name(:gender) + ':'
        %td
          = @registration.gender.capitalize unless @registration.gender.blank?
      %tr
        %th= model_class.human_attribute_name(:email) + ':'
        %td
          = @registration.email
      %tr
        %th= model_class.human_attribute_name(:phone) + ':'
        %td
          = @registration.phone
      %tr
        %th= model_class.human_attribute_name(:country) + ':'
        %td
          = @registration.country
      %tr
        %th= model_class.human_attribute_name(:city) + ':'
        %td
          = @registration.city
      %tr
        %th= model_class.human_attribute_name(:member) + ':'
        %td
          = @registration.member ? 'Yes' : 'No'
      %tr
        %th Accommodation:
        %td
          = @registration.need_place ? 'Yes' : 'No'
      %tr
        %th= model_class.human_attribute_name(:days) + ':'
        %td
          = @registration.days
      %tr
        %th= model_class.human_attribute_name(:arriving) + ':'
        %td
          = @registration.arriving
      %tr
        %th Date of registration:
        %td
          = @registration.created_at.strftime("%B %d, %Y at %H:%M")
      %tr
        %th= model_class.human_attribute_name(:comment) + ':'
        %td
          = @registration.comment

%hr
= link_to t('.back', :default => t("helpers.links.back")), admin_registrations_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_registration_path(@registration), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), admin_registration_path(@registration), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
