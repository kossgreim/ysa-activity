- model_class = Registration
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @registration.name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @registration.last_name
%p
  %strong= model_class.human_attribute_name(:gender) + ':'
  %br
  = @registration.gender.capitalize unless @registration.gender.blank?
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @registration.email
%p
  %strong= model_class.human_attribute_name(:phone) + ':'
  %br
  = @registration.phone
%p
  %strong= model_class.human_attribute_name(:country) + ':'
  %br
  = @registration.country
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @registration.city
%p
  %strong= model_class.human_attribute_name(:member) + ':'
  %br
  = @registration.member ? 'Yes' : 'No'
%p
  %strong= model_class.human_attribute_name(:need_place) + ':'
  %br
  = @registration.need_place ? 'Yes' : 'No'
%p
  %strong= model_class.human_attribute_name(:days) + ':'
  %br
  = @registration.days
%p
  %strong= model_class.human_attribute_name(:comment) + ':'
  %br
  = @registration.comment

%hr
= link_to t('.back', :default => t("helpers.links.back")), admin_registrations_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_registration_path(@registration), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), admin_registration_path(@registration), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
